<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcat"
    android:fillViewport="true"
    tools:context="com.example.beket.quizapp.QuizActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cats_image_view"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <TextView
            android:id="@+id/answer_text_view"
            style="@style/AnswerTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cats_image_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_text_view"
                style="@style/QuestionTextView" />

            <LinearLayout
                android:id="@+id/linearLayout"
                style="@style/AnswerLinearLayout">

                <RadioGroup
                    android:id="@+id/radio_group_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_one"
                        style="@style/InputAnswer"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1" />

                    <RadioButton
                        android:id="@+id/radio_two"
                        style="@style/InputAnswer"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1" />

                    <RadioButton
                        android:id="@+id/radio_three"
                        style="@style/InputAnswer"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1" />
                </RadioGroup>

                <EditText
                    style="@style/InputAnswerEditText"
                    android:id="@+id/edit_text"
                    android:inputType="text"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1" />

                <RadioGroup
                    android:id="@+id/radio_group_true_false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radio_true"
                        style="@style/InputAnswer"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:text="@string/true_answer" />

                    <RadioButton
                        android:id="@+id/radio_false"
                        style="@style/InputAnswer"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:text="@string/false_answer" />
                </RadioGroup>

                <CheckBox
                    android:id="@+id/checkbox_one"
                    style="@style/InputAnswer"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1" />

                <CheckBox
                    android:id="@+id/checkbox_two"
                    style="@style/InputAnswer"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1" />

                <CheckBox
                    android:id="@+id/checkbox_three"
                    style="@style/InputAnswer"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/next_button"
            style="@style/ButtonStyle" />
    </RelativeLayout>
</ScrollView>
